
<div class="container">
  <div class="jumbotron">
    <!-- intial jumbotron phrase -->
    <div id="jumbotron-phrase">
      <h1 class="text-center">Pick Your Plant</h1>
      <p>or</p>
      <button class="btn btn-lg" id="indexSearch">Search</button>
    </div>

    <!-- hidden content to be revealed on button press -->
    <div id="search">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4" id="form">
          <form>
            <fieldset class="form-group">
              <label for="plantSearch"><h2>Let's find it</h2></label>
              <input type="text" class="form-control" id="search-box" placeholder="search our plant list">
              <small class="text-muted">Let's check it out.</small>
            </fieldset>
          </form>
          <button type="submit" class="btn" id="button">search</button>
        </div>
      </div>
    </div>


  </div>
</div>



<div class="container">
  <div class="plant-list">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <ul class="list-group list-inline text-center" id="index-ul">
          <% @plants.each do |plant| %>

              <li class="list-group-item">
                <%= link_to plant.name, plant %>
                <% if user_signed_in? %>
                  <%= link_to 'Edit', edit_plant_path(plant) %>
                  <%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </li>

          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Plant', new_plant_path %>
