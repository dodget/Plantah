<p id="notice"><%= notice %></p>

<h1>
  <strong>Name:</strong>
  <%= @plant.name %>
</h1>


<h2>
  <strong>Friends:</strong>
  <% for friendship in @plant.friendships %>
    <li>
      <%=h friendship.friend.name %>

    </li>
    <% end %>
</h2>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |potnential_friend| %>
      <% if (@plant.name != potnential_friend.name) %>
        <% if (@plant.friendships.exists?(potnential_friend) == false)%>

          <tr>
            <td><%= potnential_friend.name %></td>
            <td><%= link_to 'Add Friend', friendships_path(:plant => @plant, :friend => potnential_friend.id), :method => :post %></td>
          </tr>

        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_plant_path(@plant) %> |
<%= link_to 'Back', plants_path %>
